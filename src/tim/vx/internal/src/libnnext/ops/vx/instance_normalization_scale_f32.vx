    VXC_DP2x8(src2, tmpVal0, tmpVal1, VXC_MODIFIER(0, 7, 0, VXC_RM_TowardZero, 1),\
        uniConvertInt32toInt16_2x8);
    VXC_OP4_NoDest(img_store_3d, output, coord.xyww, src2, \
                    VXC_MODIFIER(0, 7, 0,VXC_RM_TowardZero, 0));
